<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".myStartActivity">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_below="@+id/toolbar"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/header"
            android:id="@+id/Header"

            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/description"
            android:id="@+id/description"
            android:layout_below="@+id/Header"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ndef_text"
            android:layout_below="@+id/description"
            android:layout_alignParentStart="true"
            android:hint="Enter IPFS URL"
            android:autofillHints=""
            android:inputType="text"
            android:text="https://cloudflare-ipfs.com/ipfs/QmXtba1HNZYoeYivvBy2dVax8LMxBXSV5MNSkgmN2rAuPz"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ndef_uuid"
            android:layout_below="@+id/ndef_text"
            android:layout_alignParentStart="true"
            android:hint="Enter UUID"
            android:autofillHints=""
            android:inputType="text"
            android:text="c6601cfd-f4c0-4bca-8c19-d07da5cc6f58"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_ndef_button"
            android:id="@+id/set_ndef_button"
            android:layout_below="@+id/ndef_uuid"
            android:layout_alignEnd="@+id/ndef_text" />
        </RelativeLayout>

</RelativeLayout>
